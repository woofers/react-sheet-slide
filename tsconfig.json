{
  "compilerOptions": {
    "allowJs": false,
    "module": "ESNext",
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "es2017"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules", "lib"]
}
